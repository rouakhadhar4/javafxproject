<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ReservationController">
    <Label fx:id="userLabel" text="" />
   
    <Label fx:id="companyLabel" text="" />
    <Label fx:id="destinationLabel" text="" />
    <Label fx:id="priceLabel" text="" />
  
    <Label style="-fx-font-size: 20px;" text="Réservation" textFill="#202c99" />
    <TextField fx:id="addressField" promptText="Adresse" />
    <TextField fx:id="phoneField" promptText="Numéro de téléphone" />

    <DatePicker fx:id="datePicker" promptText="Choisir une date de réservation" />
    
    <Button onAction="#handleConfirmReservation" style="-fx-background-color: #6495ED;" text="Confirmer la réservation" textFill="#201e1e" />
</VBox>
